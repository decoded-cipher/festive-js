{
  "name": "festive-js",
  "version": "0.1.0",
  "description": "A tiny, zero-dependency JavaScript library to add festive overlays to your website.",
  "author": "Inovus Labs",
  "type": "module",
  "main": "dist/core.min.js",
  "module": "entry.core.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./entry.core.js",
      "require": "./dist/core.min.js",
      "types": "./index.d.ts",
      "development": "./entry.core.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inovus-labs/festive-js.git"
  },
  "bugs": {
    "url": "https://github.com/inovus-labs/festive-js/issues"
  },
  "homepage": "https://github.com/inovus-labs/festive-js#readme",
  "scripts": {
    "build": "npm run build:core && npm run build:themes && npm run copy:manifest",
    "build:core": "npm run build:core:dev && npm run build:core:min",
    "build:core:dev": "vite build",
    "build:core:min": "BUILD_MODE=min vite build",
    "build:themes": "node build-themes.mjs",
    "copy:manifest": "cp themes.manifest.json dist/",
    "dev": "vite",
    "preview": "vite preview",
    "build:npm": "./npm-build.sh"
  },
  "keywords": [
    "festive",
    "overlay",
    "themes",
    "library",
    "zero-dependency"
  ],
  "license": "MIT",
  "private": false,
  "unpkg": "dist/core.min.js",
  "jsdelivr": "dist/core.min.js",
  "files": [
    "dist/",
    "entry.core.js",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "terser": "^5.44.0",
    "vite": "^4.4.9"
  }
}
